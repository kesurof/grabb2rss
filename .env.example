# Prowlarr Configuration
PROWLARR_URL=http://prowlarr:9696
PROWLARR_API_KEY=your_api_key_here
PROWLARR_HISTORY_PAGE_SIZE=100

# Sync Configuration
SYNC_INTERVAL=3600  # 1 heure en secondes

# Retention Configuration
RETENTION_HOURS=168  # 7 jours
AUTO_PURGE=true

# Deduplication Configuration
DEDUP_HOURS=24  # Fenêtre de déduplication en heures

# RSS Configuration
RSS_DOMAIN=localhost:8000
RSS_SCHEME=http  # ou https si derrière un reverse proxy

# Application
APP_HOST=0.0.0.0
APP_PORT=8000
